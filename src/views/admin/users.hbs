{{>admin-tabs route='users'}}

<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{#if this.isAdmin}}admin {{else}} user {{/if}}</td>
      <td>
        {{#if this.isAdmin}}
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
          <button class="btn btn-link" onclick="return confirm(`{{ this.name }}目前權限為: admin \n\n確定要更改為user嗎?`)">set as
            user
          </button>
        </form>
        {{else}}
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
          <button class="btn btn-link" onclick="return confirm(`{{ this.name }}目前權限為: user \n\n確定要更改為admin嗎?`)">set as
            admin
          </button>
        </form>
        {{/if}}
      </td>
      <td>{{#if this.isLeader}}leader {{else}} user {{/if}}</td>
      <td>
        {{#if this.isLeader}}
        <form action="/admin/leaders/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
          <button class="btn btn-link" onclick="return confirm(`{{ this.name }}目前權限為: leader \n\n確定要更改為user嗎?`)">set as
            user
          </button>
        </form>
        {{else}}
        <form action="/admin/leaders/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
          <button class="btn btn-link" onclick="return confirm(`{{ this.name }}目前權限為: user \n\n確定要更改為leader嗎?`)">set as
            leader
          </button>
        </form>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>