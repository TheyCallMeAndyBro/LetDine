<div class="container">
  <h1 class="text-center">餐點</h1>
  <div class="row">
    <div class="col-lg-6 order-lg-1 ml-0">
      <!-- 左邊的圖片 -->
      <img class="img-responsive" src="{{group.Restaurant.menu}}"
        style="width: 600px; height: 700px; transition: opacity 0.5s; opacity: 0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-lg-6 order-lg-2">
      <!-- 右邊的訂購欄位 -->
      <div class="container mt-3">
        <form action="/groupsdetail/{{groupId}}/{{userId}}/edit?_method=PUT" method="post">
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Food</th>
                <th>Price</th>
                <th>Quantity</th>
              </tr>
            </thead>
            <tbody id="formBody">
              {{#each orderitem}}
              <tr class="form-row">
                <td><input type="text" class="form-control" name="foodId[]" value="{{this.Food.id}}" readonly></td>
                <td><input type="text" class="form-control" name="food[]" value="{{this.Food.name}}" readonly></td>
                <td><input type="number" class="form-control" name="price[]" value="{{this.Food.price}}" readonly></td>
                <td><input type="number" class="form-control" name="quantity[]" value="{{this.quantity}}"></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          <button class="btn btn-primary mx-2">Edit</button>
          <a class="btn btn-outline-secondary" href="/groupsdetail">Back</a>
        </form>
      </div>
    </div>
  </div>
</div>